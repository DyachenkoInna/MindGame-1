<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:id="@+id/layout"
              android:layout_height="match_parent"
              android:background="@drawable/menu_background"
              android:weightSum="1"  >


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1" android:layout_weight="0.18"
            android:text="О ПРОГРАММЕ" android:textSize="35dp" android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold" android:layout_gravity="center_horizontal" android:layout_margin="20dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MIND GAME"
            android:id="@+id/textView2" android:layout_gravity="center_horizontal"
            android:textStyle="bold" android:textSize="35dp" android:textColor="@android:color/white"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="version 1.0"
            android:id="@+id/textView3" android:layout_gravity="center_horizontal" android:layout_weight="0.27"
            android:textColor="@android:color/white" android:textSize="20dp" android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created by 3151 team:"
            android:id="@+id/textView4"
            android:textSize="25dp" android:textColor="@android:color/white" android:layout_gravity="center"
            android:layout_weight="0.08" android:textStyle="bold"/>
    <TextView
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:text="D.Vitinnik      V.Glimbovskiy          I.Dyachenko   M.Modestov  Y.Nedilko            K.Frolov   "
            android:id="@+id/textView5"
            android:textStyle="italic" android:textColor="#E0E0E0" android:textSize="25dp"
            android:layout_gravity="center|right" android:layout_weight="0.22"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All rights reserved"
            android:id="@+id/textView6" android:layout_gravity="center_horizontal"
            android:textStyle="bold|italic" android:textColor="@android:color/white" android:textSize="25dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3151 team © 2015"
            android:id="@+id/textView7" android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white" android:textSize="25dp" android:textStyle="bold|italic"/>
</LinearLayout>
